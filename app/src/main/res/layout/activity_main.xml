<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:fontFamily="sans-serif-medium" android:typeface="serif"
            android:textSize="72sp" android:textColor="@android:color/white" android:cursorVisible="false"
            android:layout_marginLeft="16dp" android:layout_marginTop="24dp" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.477" app:layout_constraintVertical_bias="0.3"/>
    <Button
            android:text="Toast"
            android:layout_width="wrap_content"
            android:onClick="toastMe"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:id="@+id/toast_button" android:layout_marginTop="176dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.061"/>
    <Button
            android:text="Count"
            android:layout_width="wrap_content"
            android:onClick="countMe"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:id="@+id/count_button" app:layout_constraintStart_toEndOf="@+id/toast_button" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/random_button"
            android:layout_marginEnd="24dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="Random"
            android:layout_width="89dp"
            android:layout_height="47dp"
            android:id="@+id/random_button"
            android:background="@color/buttonBackground"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>